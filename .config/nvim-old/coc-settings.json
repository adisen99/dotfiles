{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "html",
        "yaml",
        "toml",
        "json",
        "python",
        "vim",
        "fortran",
        "julia",
        "javascript"
    ],
    //suggest
    "suggest.autoTrigger": "always",
    "suggest.enablePreview": false,
    "suggest.noselect": false,
    // python config
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    //explorer
    "explorer.width": 30,
    "explorer.position": "right",
    "explorer.icon.enableVimDevicons": false,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.file.showHiddenFiles": false,
    "explorer.keyMappings.global": {
        "<cr>": [
            "explandable?",
            "expand",
            "open"
        ],
        "v": "open:vertsplit"
    },
    //snippets
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/utils/snips"
    ],
    //markdown
    "markdownlint.config": {
        "default": true,
        "line_length": false
    },
    //Fortran
    "languageserver": {
        "fortran": {
            "command": "fortls",
            "filetypes": [
                "fortran"
            ],
            "rootPatterns": [
                ".fortls",
                ".git/"
            ]
        }
    },
    "suggest.completionItemKindLabels": {
        "method": "  ",
        "function": "  ",
        "variable": "[]",
        "field": "  ",
        "typeParameter": "<>",
        "constant": "  ",
        "class": " פּ ",
        "interface": " 蘒",
        "struct": "  ",
        "event": "  ",
        "operator": "  ",
        "module": "  ",
        "property": "  ",
        "enum": " 練",
        "reference": "  ",
        "keyword": "  ",
        "file": "  ",
        "folder": " ﱮ ",
        "color": "  ",
        "unit": " 塞 ",
        "snippet": "  ",
        "text": "  ",
        "constructor": "  ",
        "value": "  ",
        "enumMember": "  "
  }
}
